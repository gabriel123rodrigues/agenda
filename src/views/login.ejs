<%- include('includes/head') %>
<%- include('includes/nav') %>
    
    <div class="container">
        <div class="row">
            <div col="col-lg-2"></div>
            <div col="col-lg-8">
                <h1 class="display-1 text-center my-3">Criar conta/Entrar</h1>
                

              
                </div>
               <div class="row mt-25">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <p>se ainda não tem cadastro, preencha o formulário abaixo</p>
                    <%- include('includes/messages') %>
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%csrfToken%>></iput>
                        <div class="form-group">
                          <label >Endereço de email</label>
                          <input type="email" class="form-control mb-2" name="email" placeholder="Seu email">
                        </div>
                        <div class="form-group">
                          <label >Sua senha</label>
                          <input type="password" class="form-control mb-2" name="password" placeholder="password">
                        </div>
                       
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                      </form>
                </div>


                <div class="col-lg">
                    <h4>Entrar no sistema</h4>
                    <p>Faça seu login</p>
                    <form action="/login/login" method="POST">
                        <iput type="hidden" name="_csrf" value=<%csrfToken%>></iput>

                        <div class="form-group">
                          <label >Endereço de email</label>
                          <input type="email" class="form-control mb-2" name="email" placeholder="Seu email">
                        </div>
                        <div class="form-group">
                          <label >Sua senha</label>
                          <input type="password" class="form-control mb-2" name="email" placeholder="password">
                        </div>
                       
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>
                </div>

               </div>
            </div>
            <div col="col-lg-2"></div>
        </div>
    </div>
<%- include('includes/footer') %>
   